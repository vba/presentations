	<form action="#">
		<div>
			<input id="celsius" type="text" name="celsius"></input>
			<strong id="result"></strong>
		</div>
		<div id="converters">
			<a style="display:block" id="fahrenheit" href="#">Fahrenheit</a>
			<a style="display:block" id="kelvin" href="#">Kelvin</a>
			<a style="display:block" id="reaumur" href="#">Reaumur</a>
			<a style="display:block" id="rankine" href="#">Rankine</a>
		</div>
	</form>

	@section scripts {
		<script type="text/javascript">
			require(['app/utils/unitsOfMeasure'], function (uom) {
				"use strict";

				$('#converters').find('> a').bind('click', function (e) {
					var id = $(this)[0].id,
						method = "to" + (id.charAt(0).toUpperCase() + id.slice(1)),
						celsius = new uom.temperature.Celsius(Number($('#celsius').val()));

					$('#result').text(celsius[method]());
				})
			})
		</script>
	}
